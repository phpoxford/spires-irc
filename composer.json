{
  "name": "phpoxford/spires-irc",
  "type": "library",
  "description": "Spires PHP IRC client & mock server",
  "homepage": "https://github.com/phpoxford/spires-irc",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Dilling-Hansen",
      "email": "martindilling@gmail.com",
      "homepage": "http://martindilling.com",
      "role": "Developer"
    },
    {
      "name": "Gareth Ellis",
      "email": "garethellis@gmail.com",
      "homepage": "http://blog.garr.co.uk",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~5.1.0",
    "hamcrest/hamcrest-php": "~1.2.0",
    "phpunit/php-token-stream": "~1.4.8",
    "scrutinizer/ocular": "~1.3",
    "squizlabs/php_codesniffer": "~2.5"
  },
  "autoload": {
    "psr-4": {
      "PHPOxford\\SpiresIrc\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPOxford\\SpiresIrc\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "sniff": "./vendor/bin/phpcs src/ --standard=PSR2 --report=summary",
    "fix": "./vendor/bin/phpcbf src/ --standard=PSR2",
    "test": "./vendor/bin/phpunit"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
